<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAvaliacao.ViewController.App.EsqueciSenha">
    <ContentPage.Content>
        <StackLayout  Margin="50 ,0, 50, 0">
            <StackLayout Padding="0 ,20, 0, 0">
                <Entry x:Name="email" Text="{Binding email}" Placeholder="E-mail" Keyboard="Email"/>
                <Entry x:Name="senha" Text="{Binding senha}" Placeholder="Senha" IsPassword="True" />
                <Entry x:Name="ConfSenha" Text="{Binding ConfSenha}" Placeholder="Confirme a senha" IsPassword="True" />
                <Button x:Name="btnAlterar" BackgroundColor="LimeGreen" Text="Alterar" TextColor="White" Clicked="btnAlterar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>