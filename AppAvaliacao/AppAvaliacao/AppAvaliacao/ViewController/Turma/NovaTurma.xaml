<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAvaliacao.NovaTurma">
    <ContentPage.Content>
        <StackLayout  Margin="50 ,0, 50, 0">
            <StackLayout Padding="0 ,20, 0, 0">
                <Entry x:Name="nome" Text="{Binding nome}" Placeholder="Nome da Turma" />
                <Button x:Name="cadastrar" BackgroundColor="LimeGreen" Text="Cadastrar" TextColor="White" Clicked="onClickCadastar"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>