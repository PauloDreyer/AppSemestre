<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAvaliacao.ViewController.Tarefa.TarefaAluno.PostarTarefa">
    <ContentPage.Content>
        <StackLayout  Margin="50 ,0, 50, 0">
            <StackLayout Padding="0 ,20, 0, 0">
                <Label Text="Tarefa" TextColor="Blue" FontSize="Medium"/>
                <Editor x:Name="Tarefa" Text="{Binding tarefa}" HeightRequest="250" />
                <Button x:Name="SelecionarAlunos" BackgroundColor="Blue" Text="Selecionar Alunos" TextColor="White" Clicked="SelecionarAlunos_Clicked"/>
                <Button x:Name="Postar" BackgroundColor="LimeGreen" Text="Postar" TextColor="White" Clicked="Postar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>