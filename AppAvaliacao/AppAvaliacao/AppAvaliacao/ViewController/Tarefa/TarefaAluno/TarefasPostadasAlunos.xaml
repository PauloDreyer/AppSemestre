<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAvaliacao.ViewController.Tarefa.TarefaAluno.TarefasPostadasAlunos">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="labelDescricao" Text="" TextColor="DarkBlue" FontSize="Medium"/>
            <ListView x:Name="LvTarefasPostadasAlunos"
                  SeparatorColor="GreenYellow"
                  SeparatorVisibility="Default"
                  BackgroundColor="White"
                  ItemSelected="LvTarefasPostadasAlunos_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                        Text="{Binding Nome}"
                        TextColor="Blue"
                        Detail="{Binding Alunos}"
                        DetailColor="DarkGray"
                        />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>