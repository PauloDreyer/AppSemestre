<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAvaliacao.ViewController.Tarefa.TarefaProfessor.LiberarAvaliacao">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Liberar/Bloquear Tarefa" TextColor="Blue" FontSize="Medium"/>
            <Switch x:Name="SLiberar"
                IsToggled="{Binding Liberar}"
                PropertyChanged="SLiberar_PropertyChanged"
             />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>