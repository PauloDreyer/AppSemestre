<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAvaliacao.ViewController.Tarefa.TarefaProfessor.AlterarTarefa">
    <ContentPage.Content>
        <StackLayout  Margin="50 ,0, 50, 0">
            <StackLayout Padding="0 ,20, 0, 0">
                <Label Text="Tarefa" TextColor="Blue" FontSize="Medium"/>
                <Entry x:Name="nome" Text="{Binding nome}" Placeholder="Nome da Tarefa" />
                <Label Text="Descrição da Tarefa" TextColor="Blue" FontSize="Medium"/>
                <Editor x:Name="descricao" Text="{Binding decricao}" HeightRequest="250" />
                <Label Text="Status" TextColor="Blue" FontSize="Medium"/>
                <Entry x:Name="status" Text="{Binding status}" Placeholder="Status" />
                <Button x:Name="alterar" BackgroundColor="LimeGreen" Text="Alterar" TextColor="White" Clicked="Alterar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>